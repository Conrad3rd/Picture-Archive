<h1>Pictures/index</h1>
<li>Pictures: <%= @pictures.count %></li>
<li>Pictures: <%#= @hash_id[0].id %></li>
<hr>
<%#= form_with url: pictures_path, method: :get, class: "d-flex" do %>

<% if @hash_id %>
  <% path =  picture_hash_index_path(@hash_id[0].id)%>
<% else %>
  <% path =  pictures_path %>
<% end %>


<%= form_with url: path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a movie"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<hr>
<%== pagy_bootstrap_nav(@pagy) %>
<hr>
<div class="container">
  <div class="row">
<% @records.each do |aaa| %>
  <%#= image_tag ad %>
  <div class="col-sm m-1 text-center">
  <div><%= link_to image_tag(aaa.variant(resize_to_limit: [100, 100])), picture_path(aaa) %></div>
  </div>
<% end %>
  </div>
</div>

<hr>

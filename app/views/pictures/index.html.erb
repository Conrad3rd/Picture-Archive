  <%# path =  picture_hash_index_path(@hash_id[0].id)%>
  <% hash_id = @hash_id[0].id %>
  <% path =  pictures_path %>
<% else %>
  <% path =  pictures_path %>
<% end %>

<div id="index-search">
  <%= render "form"%>
</div>

<hr>
<%== pagy_bootstrap_nav(@pagy) %>
<hr>
<div class="container">
  <div class="row">
<% @pictures.each do |record| %>
  <%#= image_tag ad %>
  <div class="col-sm m-1 text-center">
  <div><%#= link_to image_tag(record.variant(resize_to_limit: [100, 100])), picture_path(record) %></div>
  <div><%#= link_to image_tag(record.variant(resize_to_limit: [100, 100])), picture_path({id: record, hash_id: hash_id}) %></div>
  <div><%= link_to image_tag(record.variant(resize_to_fill: [100, 100])), picture_path({id: record, hash_id: hash_id}) %></div>
  <div><%= record.id %></div>
  </div>
<% end %>
  </div>
</div>


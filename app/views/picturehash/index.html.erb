<%#= pluralize @pictures_count, @hashname[0].name %>
<h1>Picture-Hash#index <%= @hashname[0].name %></h1>
<p>Find me in app/views/picturehash/index.html.erb</p>
<div><%= @aaaa.inspect %></div>
<br>
<br>
<br>
<div>Existing: <%= @existing_pics.count %></div>
<div>Available: <%= @pictures_count %></div>
<% if @pictures_count > 50 %>
  <%== pagy_bootstrap_nav(@pagy) %>
  <% pics = @records %>
<% else %>
  <% pics = @pictures %>
<% end %>
<%= "===========================================" %>
<% 2.times { %><br>
<% } %>
<div class="container">
  <div class="row">
    <% pics.each do |pic| %>
      <div class="col-sm m-1 text-center">
        <%#= link_to image_tag(pic.variant(resize_to_limit: [100, 100])), picture_path(pic) %>
        <div><%= link_to image_tag(pic.variant(resize_to_limit: [100, 100])), show_hashs_path({id: pic, hash_id: @hashname[0].id}) %></div>
        <%#= link_to pic.id, picture_path(pic) %>
        <div><%= link_to pic.id, show_hashs_path({id: pic, hash_id: @hashname[0].id}) %></div>
      </div>
    <% end %>
  </div>
</div>
<%# picture_hash_show_path %>
<% 10.times { %><br>
<% } %>
